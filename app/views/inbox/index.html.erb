<p id="notice"><%= notice %></p>

<h1>My Inbox</h1>

<%= link_to '<i class="fa fa-edit"></i> New Message'.html_safe, new_message_path, class: 'btn btn-success' %>
<table class="table">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Subject</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr class="<%= 'unread' unless message.read %>">
        <td><%= User.find(message.sender_id).user_profile.name %></td>
        <td><%= link_to message.subject, message %></td>
        <td><%= message.created_at.strftime('%H:%M %d/%m/%y') %></td>
        <td><%= link_to '<i class="fa fa-trash fa-lg"></i>'.html_safe, message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

